<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TeamProperties">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/ColorOfTheTeam</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="ButtonProperties">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:background">#ff9100</item>
    </style>


    <style name="ScoreAtTheTime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">21dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
